{
  "name": "rollix-nuxt-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "build": "chmod +x node_modules/.bin/* && nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:dev": "prisma dev",
    "admin:create": "tsx scripts/create-admin.ts",
    "bonus:migrate": "tsx scripts/apply-bonus-migration.ts",
    "clean:test": "tsx scripts/clean-test-products.ts",
    "iiko:sync": "tsx scripts/sync-iiko-menu.ts",
    "iiko:test": "tsx scripts/test-iiko-api.ts",
    "iiko:test-order": "tsx scripts/test-order-sync.ts",
    "iiko:test-api": "tsx scripts/test-api-endpoints.ts",
    "iiko:test-sync": "tsx scripts/test-status-sync.ts",
    "iiko:test-downgrade": "tsx scripts/test-status-downgrade.ts",
    "render:build": "npm install --production=false && npx prisma generate --schema=prisma/schema.prisma && npx tsx scripts/create-sms-table.ts && npx tsx scripts/add-product-tags.ts && npx tsx scripts/create-banners-table.ts && npm run build",
    "render:setup": "npx tsx scripts/setup-db.ts",
    "render:migrate": "npx tsx scripts/run-migration.ts"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@pinia/nuxt": "^0.11.3",
    "@prisma/adapter-pg": "6.19.0",
    "@prisma/client": "6.19.0",
    "@types/ws": "^8.18.1",
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "nuxt": "^3.12.0",
    "pg": "^8.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^3.0.2",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@yandex/ymaps3-types": "^1.0.18353609",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "postcss": "^8.4.47",
    "prettier": "^3.7.3",
    "prisma": "6.19.0",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}

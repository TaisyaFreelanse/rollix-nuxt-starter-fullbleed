// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Пользователи
model User {
  id        String    @id @default(cuid())
  phone     String    @unique
  email     String?
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Связи
  addresses Address[]
  orders    Order[]
  favorites ProductFavorite[]

  @@map("users")
}

// Адреса доставки
model Address {
  id          String   @id @default(cuid())
  userId      String
  street      String
  house       String
  apartment   String?
  entrance    String?
  floor        String?
  intercom     String?
  comment      String?
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Связи
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders      Order[]

  @@map("addresses")
}

// Категории товаров
model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  icon        String?   // URL иконки или название иконки
  image       String?   // URL изображения категории
  description String?
  sortOrder   Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Связи
  products    Product[]

  @@map("categories")
}

// Товары
model Product {
  id          String    @id @default(cuid())
  categoryId  String
  name        String
  slug        String    @unique
  description String?
  image       String?
  images      String[]  // Массив URL изображений
  price       Decimal   @db.Decimal(10, 2)
  oldPrice    Decimal?  @db.Decimal(10, 2) // Старая цена для акций
  weight      Int?      // Вес в граммах
  calories    Int?      // Калории
  isActive    Boolean   @default(true)
  isPopular   Boolean   @default(false)
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Связи
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  modifiers   ProductModifier[]
  orderItems  OrderItem[]
  favorites   ProductFavorite[]

  @@map("products")
}

// Модификаторы товаров (соусы, палочки, васаби и т.д.)
model ProductModifier {
  id          String   @id @default(cuid())
  productId   String
  name        String
  price       Decimal  @db.Decimal(10, 2)
  isRequired  Boolean  @default(false)
  isMultiple  Boolean  @default(false) // Можно выбрать несколько
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  options     ModifierOption[]
  orderItemModifiers OrderItemModifier[]

  @@map("product_modifiers")
}

// Варианты модификаторов
model ModifierOption {
  id          String   @id @default(cuid())
  modifierId  String
  name        String
  price       Decimal  @db.Decimal(10, 2)
  isDefault   Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  modifier    ProductModifier @relation(fields: [modifierId], references: [id], onDelete: Cascade)
  orderItemModifiers OrderItemModifier[]

  @@map("modifier_options")
}

// Промокоды
model PromoCode {
  id            String    @id @default(cuid())
  code          String    @unique
  description   String?
  discountType  DiscountType
  discountValue Decimal   @db.Decimal(10, 2) // Процент или фиксированная сумма
  minOrderAmount Decimal? @db.Decimal(10, 2) // Минимальная сумма заказа
  maxDiscount   Decimal?  @db.Decimal(10, 2) // Максимальная скидка
  usageLimit    Int?      // Лимит использований (null = без лимита)
  usedCount     Int       @default(0)
  validFrom     DateTime?
  validUntil    DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Связи
  orders        Order[]

  @@map("promo_codes")
}

enum DiscountType {
  PERCENT  // Процентная скидка
  FIXED    // Фиксированная сумма
}

// Зоны доставки
model DeliveryZone {
  id          String   @id @default(cuid())
  name        String
  description String?
  coordinates Json     // Геометрия зоны (полигон)
  minOrderAmount Decimal @db.Decimal(10, 2) // Минимальная сумма заказа
  deliveryPrice Decimal  @db.Decimal(10, 2) // Стоимость доставки
  freeDeliveryThreshold Decimal? @db.Decimal(10, 2) // Бесплатная доставка от суммы
  estimatedTime Int     // Время доставки в минутах
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  orders      Order[]

  @@map("delivery_zones")
}

// Заказы
model Order {
  id              String      @id @default(cuid())
  userId          String?
  orderNumber     String      @unique // Номер заказа для отображения
  status          OrderStatus @default(PENDING)
  deliveryType    DeliveryType
  deliveryZoneId  String?
  addressId       String?
  addressText     String?     // Адрес доставки (если не из справочника)
  phone           String
  name            String?
  comment         String?
  deliveryTime    DateTime?   // Время доставки
  subtotal        Decimal     @db.Decimal(10, 2) // Сумма товаров
  deliveryPrice   Decimal     @db.Decimal(10, 2) // Стоимость доставки
  discount        Decimal     @default(0) @db.Decimal(10, 2) // Скидка
  total           Decimal     @db.Decimal(10, 2) // Итоговая сумма
  promoCodeId     String?
  paymentMethod   PaymentMethod
  paymentStatus   PaymentStatus @default(PENDING)
  paymentId       String?     // ID платежа в платежной системе
  aikoOrderId     String?     // ID заказа в системе АЙКО
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Связи
  user            User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  address         Address?    @relation(fields: [addressId], references: [id], onDelete: SetNull)
  deliveryZone    DeliveryZone? @relation(fields: [deliveryZoneId], references: [id], onDelete: SetNull)
  promoCode       PromoCode?  @relation(fields: [promoCodeId], references: [id], onDelete: SetNull)
  items           OrderItem[]

  @@map("orders")
}

enum OrderStatus {
  PENDING       // Ожидает подтверждения
  CONFIRMED     // Подтвержден
  PREPARING     // Готовится
  READY         // Готов
  DELIVERING    // В доставке
  DELIVERED     // Доставлен
  CANCELLED     // Отменен
}

enum DeliveryType {
  DELIVERY  // Доставка
  PICKUP    // Самовывоз
}

enum PaymentMethod {
  CASH         // Наличные
  CARD         // Карта курьеру
  ONLINE       // Онлайн оплата
}

enum PaymentStatus {
  PENDING     // Ожидает оплаты
  PAID        // Оплачен
  FAILED      // Ошибка оплаты
  REFUNDED    // Возврат
}

// Позиции заказа
model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  price       Decimal  @db.Decimal(10, 2) // Цена на момент заказа
  subtotal    Decimal  @db.Decimal(10, 2) // Сумма позиции
  createdAt   DateTime @default(now())

  // Связи
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  modifiers   OrderItemModifier[]

  @@map("order_items")
}

// Модификаторы позиции заказа
model OrderItemModifier {
  id              String   @id @default(cuid())
  orderItemId     String
  modifierId      String
  optionId        String?
  name            String   // Название модификатора на момент заказа
  price           Decimal  @db.Decimal(10, 2)
  createdAt       DateTime @default(now())

  // Связи
  orderItem       OrderItem      @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  modifier        ProductModifier @relation(fields: [modifierId], references: [id], onDelete: Cascade)
  option          ModifierOption? @relation(fields: [optionId], references: [id], onDelete: Cascade)

  @@map("order_item_modifiers")
}

// Избранные товары
model ProductFavorite {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  // Связи
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("product_favorites")
}

// Администраторы
model Admin {
  id        String   @id @default(cuid())
  login     String   @unique
  password  String   // Хэшированный пароль
  name      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// Акции/Объявления
model Promotion {
  id          String    @id @default(cuid())
  title       String
  description String?
  image       String?   // URL изображения
  date        DateTime? // Дата акции
  isActive    Boolean   @default(true)
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("promotions")
}

// Виджет промокода (отображается на странице акций)
model PromocodeWidget {
  id          String    @id @default(cuid())
  code        String
  description String
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("promocode_widgets")
}

// SMS коды для авторизации
model SmsCode {
  id        String   @id @default(cuid())
  phone     String
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([phone, code])
  @@index([expiresAt])
  @@map("sms_codes")
}